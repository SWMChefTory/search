{
  "index_patterns": ["autocomplete*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "nori_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["lowercase"]
        },
        "icu_analyzer": {
          "type": "custom",
          "char_filter": ["icu_normalizer"],
          "tokenizer": "standard",
          "filter": ["lowercase"]
        },
        "autocomplete_analyzer": {
          "type": "custom",
          "char_filter": ["rm_ws", "rm_special"],
          "tokenizer": "autocomplete_ngram_tokenizer",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "autocomplete_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": ["letter", "digit"]
        }
      },
      "char_filter": {
        "icu_normalizer": {
          "type": "icu_normalizer",
          "name": "nfc",
          "mode": "decompose"
        },
        "rm_ws": {
          "type": "pattern_replace",
          "pattern": "\\s+",
          "replacement": ""
        },
        "rm_special": {
          "type": "pattern_replace",
          "pattern": "[^a-zA-Z0-9가-힣]",
          "replacement": ""
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "text": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "fields": {
          "icu": {
            "type": "text",
            "analyzer": "icu_analyzer"
          },
          "keyword": {
            "type": "keyword"
          },
          "ngram": {
            "type": "text",
            "analyzer": "autocomplete_analyzer"
          }
        }
      },
      "count": {
        "type": "integer"
      }
    }
  }
}